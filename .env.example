# ============================================================================
# Ollama 설정
# ============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:14b
OLLAMA_TEMPERATURE=0.7

# ============================================================================
# ComfyUI 설정
# ============================================================================
COMFYUI_URL=http://127.0.0.1:8188
COMFYUI_WS_URL=ws://127.0.0.1:8188/ws
COMFYUI_WORKFLOW_PATH=comfyui_workflow.json
COMFYUI_TIMEOUT=300
COMFYUI_RETRY_COUNT=2
COMFYUI_USE_MOCK=false
COMFYUI_API_KEY=
COMFYUI_CHECKPOINT=

# ============================================================================
# 출력 설정
# ============================================================================
OUTPUT_DIR=output

# ============================================================================
# 비디오 설정
# ============================================================================
VIDEO_FPS=24
VIDEO_CODEC=libx264
VIDEO_AUDIO_CODEC=aac
ZOOM_FACTOR=1.15

# ============================================================================
# TTS 설정
# ============================================================================
TTS_VOICE=ko-KR-InJoonNeural

# ============================================================================
# Wan2.2 I2V 모션 생성 설정
# ============================================================================
# 모션 생성 활성화 여부
MOTION_ENABLED=true

# 모션 프레임레이트 및 길이
MOTION_FPS=12
MOTION_DURATION=3.0

# 모션 모델 타입
MOTION_MODEL_TYPE=wan2.2_distill

# I2V 체크포인트 및 LoRA 모델
# ComfyUI/models/checkpoints/ 에 배치할 파일명
I2V_CHECKPOINT=Wan2.2-Distill-Loras.safetensors
# ComfyUI/models/loras/ 에 배치할 파일명
I2V_LORA=Wan2.2-I2V-Distill-LORA.safetensors

# I2V 노드 타입 (ComfyUI에 설치된 실제 노드 이름)
# 일반적인 값: ImageToVideo, I2V, Wan2I2V, Wan2ImageToVideo 등
# ComfyUI 웹 인터페이스에서 I2V 노드를 추가하여 정확한 이름을 확인하세요
I2V_NODE_TYPE=ImageToVideo

# I2V 추론 파라미터 (Lightning/Distill 4-step)
I2V_STEPS=4
I2V_GUIDANCE=3.5
